@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Manage Roles";
}

<h2>@ViewData["Title"]</h2>

<div class="mb-3">
    <a href="@Url.Action("Create", "Role", new { area = "Admin" })" class="btn btn-primary">
        Create New Role
    </a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <a href="@Url.Action("Edit", "Role", new { id = role.Id, area = "Admin" })" class="btn btn-warning btn-sm">
                        Edit
                    </a>
                    <a href="@Url.Action("Delete", "Role", new { id = role.Id, area = "Admin" })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this role?')">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
