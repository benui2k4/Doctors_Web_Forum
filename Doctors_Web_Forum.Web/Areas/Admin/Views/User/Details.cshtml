@model Doctors_Web_Forum.DAL.Models.User

@{
    ViewData["Title"] = "User Details";
}

<div class="container mt-4">
    

    <div class="card">
        <div class="card-header">
            <h4>User Information</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">User ID:</dt>
                <dd class="col-sm-9">@Model.Id</dd>

                <dt class="col-sm-3">Username:</dt>
                <dd class="col-sm-9">@Model.UserName</dd>

                <dt class="col-sm-3">Full Name:</dt>
                <dd class="col-sm-9">@Model.FullName</dd>

                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Phone Number:</dt>
                <dd class="col-sm-9">@Model.PhoneNumber</dd>

                <dt class="col-sm-3">Address:</dt>
                <dd class="col-sm-9">@Model.Address</dd>

                <dt class="col-sm-3">Registration Date:</dt>
                <dd class="col-sm-9">@Model.RegDate.ToString("yyyy-MM-dd HH:mm")</dd>

                <dt class="col-sm-3">Last Login:</dt>
                <dd class="col-sm-9">@Model.LastLogin?.ToString("yyyy-MM-dd HH:mm") ?? "Never Logged In"</dd>

                <dt class="col-sm-3">Status:</dt>
                <dd class="col-sm-9">
                    <span class="badge @(Model.Status ? "bg-success" : "bg-danger")">
                        @(Model.Status ? "Active" : "Inactive")
                    </span>
                </dd>


                <dt class="col-sm-3">Password Hash:</dt>
                <dd class="col-sm-9">@Model.PasswordHash</dd>

                <dt class="col-sm-3">Role</dt>
                <dd class="col-sm-9">@Model.Role</dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
        </div>
    </div>
</div>
