@model Doctors_Web_Forum.DAL.Models.User

@{
    ViewData["Title"] = "Thêm Mới Người Dùng";
}

<div class="container">
    <h2>Thêm mới người dùng</h2>
    <div class="row">
        <div class="col-md-10">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <form asp-action="Create" asp-controller="User" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                
                <div class="form-group">
                    <label>Username</label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <!-- Email -->
                <div class="form-group">
                    <label>Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Số điện thoại -->
                <div class="form-group">
                    <label>PhoneNumber</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <!-- Mật khẩu -->
                <div class="form-group">
                    <label>Password</label>
                    <input asp-for="PasswordHash" type="password" class="form-control" />
                    <span asp-validation-for="PasswordHash" class="text-danger"></span>
                </div>

                <!-- Vai trò -->
                <div class="form-group">
                    <label>Role</label>
                    <select asp-for="Role" class="form-control" asp-items="ViewBag.Roles">
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <!-- Nút thêm mới -->
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Thêm mới</button>
                </div>
            </form>

            <a class="btn btn-danger" asp-controller="User" asp-action="Index">Trở về danh sách người dùng</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
