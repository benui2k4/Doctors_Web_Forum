@model Doctors_Web_Forum.DAL.Models.User

@{
    ViewData["Title"] = "Thêm Mới Người Dùng";
}

<div class="container">
    <h2>Thêm mới người dùng</h2>
    <div class="row">
        <div class="col-md-10">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <form asp-action="Create" asp-controller="User" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Username -->
                <div class="form-group">
                    <label>Username</label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>FullName</label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <!-- Email -->
                <div class="form-group">
                    <label>Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Phone Number -->
                <div class="form-group">
                    <label>Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="form-group">
                    <label>Password</label>
                    <input asp-for="PasswordHash" type="password" class="form-control" />
                    <span asp-validation-for="PasswordHash" class="text-danger"></span>
                </div>

                <!-- Address -->
                <div class="form-group">
                    <label>Address</label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <!-- Status -->
                <div class="form-group">
                    <label>Status</label>
                    <select asp-for="Status" class="form-control">
                        <option value="true">Active</option>
                        <option value="false">Inactive</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <!-- Roles -->
                <div class="form-group">
                    <label>Roles</label>
                    <select asp-for="Role" class="form-control" asp-items="ViewBag.Roles">
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Thêm mới</button>
                </div>
            </form>

            <a class="btn btn-danger" asp-controller="User" asp-action="Index">Trở về danh sách người dùng</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
