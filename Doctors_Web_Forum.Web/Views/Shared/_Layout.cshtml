<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Doctors_Web_Forum.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Doctors_Web_Forum.Web.styles.css" asp-append-version="true" />
   <link rel="stylesheet" href="~/user/css/header.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/user/css/forums.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/user/css/home.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/user/css/index.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/user/css/topic.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/user/css/register.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/user/css/login.css" asp-append-version="true" />

</head>
<body>
    <header class="header">
        <div class="container">
            <!-- Logo -->
            <div class="logo-container">
                <img src="~/user/images/logo.jpg" alt="HealthBoards Logo" class="logo">
            </div>

            <!-- Navigation Menu -->
            <nav class="nav-menu">
                <a asp-controller="Home" asp-action="Index">Home</a>
                <a asp-controller="Forums" asp-action="Index">Message Boards</a>
                <a asp-controller="Topics" asp-action="Index">Drug Talk</a>
                <a asp-controller="Login" asp-action="Index">Login</a>
                <a asp-controller="Register" asp-action="Index">Sign Up</a>
            </nav>
        </div>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            <div class="footer-content">
                <!-- Logo hoặc Tên Website -->
                <div class="footer-brand">
                    <strong>Doctors Web Forum</strong>
                </div>

                <!-- Các liên kết cần thiết -->
                <div class="footer-links">
                    <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
                    <a asp-area="" asp-controller="Home" asp-action="Terms">Terms of Service</a>
                    <a asp-area="" asp-controller="Home" asp-action="Contact">Contact Us</a>
                    <a asp-area="" asp-controller="Home" asp-action="About">About Us</a>
                </div>

                <!-- Thông tin bản quyền -->
                <div class="footer-copyright">
                    &copy; 2024 Doctors_Web_Forum.Web. All rights reserved.
                </div>
            </div>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
